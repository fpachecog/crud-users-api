{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"name": {
			"maxLength": 50,
			"minLength": 1,
			"type": "string"
		},
		"email": {
			"type": "string"
		},
		"password": {
			"maxLength": 20,
			"minLength": 8,
			"pattern": "^[0-9]{10}$",
			"type": "string"
		},
		"phones": {
			"minLength": 1,
			"type": "array",
			"items": {
				"properties": {
					"number": {
						"type": "string",
						"pattern": "^\\d{10}$"
					},
					"citycode": {
						"type": "string"
					},
					"contrycode": {
						"type": "string"
					}
				},
				"required": [
					"number",
					"citycode",
					"contrycode"
				]
			}
		}
	},
	"required": [
		"name",
		"email",
		"password",
		"phones"
	]
}